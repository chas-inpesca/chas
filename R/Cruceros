rm(list=ls())
library(PBSadmb)
library(Hmisc)
# LECTURA REPORTE
M8 <- readRep("sard", suffix = c(".REP"))
# vectores

rescap<-    M8$residualcaptura
rescpue<-   M8$residualcpue
resreclas<- M8$residualreclas
respela<-   M8$residualpelaces
abun<-      M8$Numerodepecesenelstock
